CREATE TABLE Customer_Classification (
    CSTCL_ID NUMBER(15) PRIMARY KEY,
    CSTCL_TYP VARCHAR(100) NOT NULL,
    CSTCL_TYP_VALUE VARCHAR(100) NOT NULL,
    CSTCL_EFCTV_DT DATE NOT NULL,
    CSTCL_CRUD_VALUE CHAR(1) CHECK (CSTCL_CRUD_VALUE IN ('C', 'U', 'D')),
    CSTCL_USER_ID VARCHAR(100) NOT NULL,
    CSTCL_WS_ID VARCHAR(100) NOT NULL,
    CSTCL_PRGM_ID VARCHAR(100) NOT NULL,
    CSTCL_HOST_TS TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    CSTCL_LOCAL_TS TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    CSTCL_ACPT_TS TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    CSTCL_ACPT_TS_UTC_OFST TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    CSTCL_UUID VARCHAR(100) NOT NULL
);

